{
  "tasks": {
    "dev": "deno run -A --watch server/main.ts",
    "start": "deno run -A server/main.ts",
    "test": "deno test -A",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "offline:fetch": "deno run -A tools/fetch_offline.ts"
  },
  "lint": {
    "rules": {
      "exclude": ["node_modules/**"]
    }
  },
  "fmt": {
    "exclude": ["node_modules/"]
  },
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "strict": true
  }
}
